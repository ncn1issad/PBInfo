{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "g++ build active file (src -> out)",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/run_cpp.sh",
      "args": [
        "${workspaceFolder}",
        "${file}",
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build and Run active file",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/run_cpp.sh",
      "args": [
        "${workspaceFolder}",
        "${file}",
        "run"
      ],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Prepare for Debug",
      "type": "shell",
      "command": "mkdir",
      "args": [
        "-p",
        "${workspaceFolder}/resources/${fileBasenameNoExtension}"
      ],
      "group": "none",
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      },
      "dependsOn": "g++ build active file (src -> out)"
    }
  ]
}
