{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug active file (src -> out)",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "Prepare for Debug",
  "program": "${workspaceFolder}/out/${relativeFileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/resources/${fileBasenameNoExtension}",
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
